{% extends "admin_base.html.twig" %}
{% block stylesheets %}
    <!-- DataTables -->
    <link rel="stylesheet" href="{{ asset('bundles/back/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/back/plugins/datatables-responsive/css/responsive.bootstrap4.min.css') }}">
{% endblock %}
{% block title %}
    Users
{% endblock title %}
{% block body %}
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Utilsateurs</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Home</a></li>
                        <li class="breadcrumb-item active">Utilisateurs</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Liste d'utilisateurs</h3>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-bordered" id="user-list">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th>Email</th>
                                    <th>Firstname</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for utilisateur in users %}
                                    <tr>
                                        <td>{{ loop.index0 }}</td>
                                        <td>{{ utilisateur.email }}</td>
                                        <td>{{ utilisateur.firstName }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th></th>
                                    <th>Email</th>
                                    <th>Firstname</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock body %}

{% block javascripts %}
    <!-- DataTables -->
    <script src="{{ asset('bundles/back/plugins/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('bundles/back/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('bundles/back/plugins/datatables-responsive/js/dataTables.responsive.min.js') }}"></script>
    <script src="{{ asset('bundles/back/plugins/datatables-responsive/js/responsive.bootstrap4.min.js') }}"></script>
    <script>
        $(function () {
            $("#user-list").DataTable({
                /*"processing": true,
                "serverSide": true,
                "ajax": "{{ path('admin_users') }}",*/
                "responsive": true,
                /*"autoWidth": false,*/
            });
        });
    </script>
{% endblock %}