{% extends "admin_base.html.twig" %}
{% block title %} Salles {% endblock title %}
{% block body %}
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Salles</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Salles</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            {% include 'flush.html.twig' %}
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Liste des salle</h3>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-bordered" id="user-list">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th>Nom de la salle</th>
                                    <th>Type du salle</th>
                                    <th>Nombre d'étudiants</th>
                                    <th>État de la salle</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for classroom in classrooms %}
                                    <tr>
                                        <td>{{ loop.index0 }}</td>
                                        <td>{{ classroom.name }}</td>
                                        <td>{{ classroom.classType }}</td>
                                        <td>{{ classroom.studentLimit }}</td>
                                        <td>{{ classroom.enabled }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th></th>
                                    <th>Nom de la salle</th>
                                    <th>Type du salle</th>
                                    <th>Nombre d'étudiants</th>
                                    <th>État de la salle</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}