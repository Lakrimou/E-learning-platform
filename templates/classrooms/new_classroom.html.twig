{% extends "admin_base.html.twig" %}
{% block title %} Classe {% endblock title %}
{% block stylesheets %}
    <link href="{{ asset('datetime/css/bootstrap-datetimepicker-standalone.css') }}" rel="stylesheet">
    <link href="{{ asset('datetime/css/bootstrap-datetimepicker.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('bundles/back/plugins/icheck-bootstrap/icheck-bootstrap.min.css') }}">
{% endblock stylesheets %}
{% block body %}
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Salle</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Salle</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Ajouter une salle</h3>
                        </div>
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(form.name) }}
                                        {{ form_errors(form.name) }}
                                        {{ form_widget(form.name) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.classType) }}
                                        {{ form_errors(form.classType) }}
                                        {{ form_widget(form.classType) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.description) }}
                                        {{ form_errors(form.description) }}
                                        {{ form_widget(form.description) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.classType) }}
                                        {{ form_errors(form.classType) }}
                                        {{ form_widget(form.classType) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.studentLimit) }}
                                        {{ form_errors(form.studentLimit) }}
                                        {{ form_widget(form.studentLimit) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_errors(form.enabled) }}
                                        {{ form_widget(form.enabled) }}
                                        {{ form_label(form.enabled) }}
                                    </div>
                                </div>
                                <div class="col-md-6">

                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-block btn-primary" value="Ajouter salle">
                            </div>
                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}